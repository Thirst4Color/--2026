<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Видеопрокат "ФильмоМир"</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!-- jQuery UI для автодополнения -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    <!-- Стили сайта -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Навигационная панель -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="bi bi-camera-reels"></i> ФильмоМир
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Catalog")">
                            <i class="bi bi-film"></i> Каталог
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">
                            <i class="bi bi-cart"></i> Корзина
                            <span id="cartCount" class="badge bg-danger">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MyOrders", "Account")">
                            <i class="bi bi-clock-history"></i> Мои заказы
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Wishlist", "Account")">
                            <i class="bi bi-heart"></i> Список желаний
                        </a>
                    </li>
                </ul>

                <!-- Поиск в навбаре -->
                <form class="d-flex me-2" action="@Url.Action("Index", "Catalog")" method="get">
                    <input class="form-control me-2" type="search" id="searchInput"
                           placeholder="Поиск фильмов..." aria-label="Search" name="search">
                    <button class="btn btn-outline-light" type="submit">Найти</button>
                </form>

                <!-- Кнопки входа/регистрации -->
                <div class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> Мой профиль
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Login", "Account")">
                                    <i class="bi bi-box-arrow-in-right"></i> Войти
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Register", "Account")">
                                    <i class="bi bi-person-plus"></i> Регистрация
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                    <i class="bi bi-gear"></i> Настройки
                                </a>
                            </li>
                        </ul>
                    </li>
                </div>
            </div>
        </div>
    </nav>

    <!-- Основной контент -->
    <main role="main" class="flex-shrink-0">
        @RenderBody()
    </main>

    <!-- Футер -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="bi bi-camera-reels"></i> ФильмоМир</h5>
                    <p class="text-muted">Ваш надежный видеопрокат с 1998 года. Большой выбор фильмов на любых носителях.</p>
                </div>
                <div class="col-md-4">
                    <h5>Контакты</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-telephone"></i> +7 (495) 123-45-67</li>
                        <li><i class="bi bi-envelope"></i> info@filmomir.ru</li>
                        <li><i class="bi bi-geo-alt"></i> г. Москва, ул. Киношная, д. 15</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Часы работы</h5>
                    <ul class="list-unstyled">
                        <li>Пн-Пт: 10:00 - 22:00</li>
                        <li>Сб-Вс: 11:00 - 20:00</li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="text-center text-muted">
                <p>&copy; 2024 Видеопрокат "ФильмоМир". Все права защищены.</p>
            </div>
        </div>
    </footer>

    <!-- Скрипты -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Обновление счетчика корзины
        function updateCartCount() {
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('cartCount').textContent = data.count;
                });
        }

        // При загрузке страницы
        $(document).ready(function() {
            updateCartCount();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>