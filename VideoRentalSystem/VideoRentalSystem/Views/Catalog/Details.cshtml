@model VideoRentalSystem.Models.ViewModels.MovieDetailsViewModel
@{
    ViewData["Title"] = Model.Title + " - Видеопрокат";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.CoverImageUrl" class="img-fluid rounded shadow" alt="@Model.Title"
                 onerror="this.onerror=null; this.src='/images/default-movie.jpg';">
        </div>
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Catalog")">Каталог</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>

            <h1>@Model.Title (@Model.Year)</h1>

            @if (Model.Rating.HasValue)
            {
                <div class="mb-3">
                    <span class="badge bg-warning text-dark fs-6">
                        <i class="bi bi-star-fill"></i> Рейтинг: @Model.Rating.Value.ToString("0.0")/10
                    </span>
                </div>
            }

            <div class="mb-4">
                <p><strong>Жанр:</strong> @Model.Genre</p>
                <p><strong>Режиссер:</strong> @Model.Director</p>
                <p><strong>Продолжительность:</strong> @(Model.Duration.HasValue ? $"{Model.Duration} мин." : "Не указана")</p>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Описание</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <!-- Доступность и форматы -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Доступность для проката</h5>
                </div>
                <div class="card-body">
                    @if (Model.IsAvailable)
                    {
                        <div class="alert alert-success">
                            <h6 class="alert-heading">
                                <i class="bi bi-check-circle-fill"></i> Фильм доступен для проката!
                            </h6>
                            <p>Доступно копий: <strong>@Model.AvailableCopies</strong></p>
                        </div>

                        <h6>Доступные форматы:</h6>
                        <div class="row">
                            @foreach (var mediaItem in Model.MediaItems.Where(mi => mi.IsAvailable))
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="bi bi-disc"></i> @mediaItem.Format
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    Состояние: @mediaItem.Condition<br>
                                                    Цена: @mediaItem.DailyPrice.ToString("C") / день
                                                </small>
                                            </p>
                                            <form method="post" action="@Url.Action("AddToCart", "Cart")" class="d-inline">
                                                <input type="hidden" name="mediaItemId" value="@mediaItem.MediaItemId" />
                                                <div class="input-group input-group-sm">
                                                    <select name="rentalDays" class="form-select form-select-sm" style="width: auto;">
                                                        <option value="1">1 день</option>
                                                        <option value="3" selected>3 дня</option>
                                                        <option value="7">7 дней</option>
                                                        <option value="14">14 дней</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="bi bi-cart-plus"></i> В корзину
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h6 class="alert-heading">
                                <i class="bi bi-clock"></i> В данный момент все копии выданы
                            </h6>
                            @if (Model.NextAvailableDate.HasValue)
                            {
                                <p>Ближайшая доступная дата: <strong>@Model.NextAvailableDate.Value.ToString("dd.MM.yyyy")</strong></p>
                            }
                            else
                            {
                                <p>Дата возврата неизвестна</p>
                            }
                            <hr>
                            <p class="mb-0">
                                <button class="btn btn-outline-primary btn-sm" onclick="addToWishlist(@Model.MovieId)">
                                    <i class="bi bi-bell"></i> Уведомить о появлении
                                </button>
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Все копии -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Все копии фильма</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Формат</th>
                                    <th>Состояние</th>
                                    <th>Статус</th>
                                    <th>Цена проката</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mediaItem in Model.MediaItems)
                                {
                                    <tr>
                                        <td>@mediaItem.Format</td>
                                        <td>
                                            <span class="badge @GetConditionBadgeClass(mediaItem.Condition)">
                                                @mediaItem.Condition
                                            </span>
                                        </td>
                                        <td>
                                            @if (mediaItem.IsAvailable)
                                            {
                                                <span class="badge bg-success">Доступна</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Выдана</span>
                                            }
                                        </td>
                                        <td>@mediaItem.DailyPrice.ToString("C") / день</td>
                                        <td>
                                            @if (mediaItem.IsAvailable)
                                            {
                                                <form method="post" action="@Url.Action("AddToCart", "Cart")" class="d-inline">
                                                    <input type="hidden" name="mediaItemId" value="@mediaItem.MediaItemId" />
                                                    <div class="input-group input-group-sm" style="width: 150px;">
                                                        <select name="rentalDays" class="form-select form-select-sm">
                                                            <option value="1">1 д.</option>
                                                            <option value="3" selected>3 д.</option>
                                                            <option value="7">7 д.</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-success btn-sm">
                                                            <i class="bi bi-cart-plus"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Недоступно</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Catalog")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Вернуться в каталог
                </a>
            </div>
        </div>
    </div>
</div>


<style>
    /* Стили для кнопок в деталях фильма */
    .media-item-card .input-group {
        max-width: 250px;
    }

    /* Стили для таблицы копий */
    .table-actions form {
        min-width: 150px;
    }

    .table-actions .input-group-sm {
        height: 31px;
    }

    /* Адаптивность для карточек форматов */
    @@media (max-width: 576px) {
        .media-item-card .card-body {
            padding: 10px;
        }

        .media-item-card .btn {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
        }

        .table-actions form {
            min-width: 120px;
        }
    }

    /* Стили для индикаторов состояния */
    .badge.bg-success {
        background-color: #198754 !important;
    }

    .badge.bg-info {
        background-color: #0dcaf0 !important;
    }

    .badge.bg-warning {
        background-color: #ffc107 !important;
        color: #000;
    }

    .badge.bg-danger {
        background-color: #dc3545 !important;
    }
</style>

@section Scripts {
    <script>
      
    </script>
}

@functions {
    public string GetConditionBadgeClass(string condition)
    {
        return condition?.ToLower() switch
        {
            "excellent" => "bg-success",
            "good" => "bg-info",
            "fair" => "bg-warning",
            "poor" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}